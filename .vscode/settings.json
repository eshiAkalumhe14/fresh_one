{
  "eslint.enable": true,
  "eslint.run": "onType", // use "onSave" if you prefer only on save
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true, // optional: run Prettier format on save
  "prettier.requireConfig": true
}